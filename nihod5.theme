/** FIX BREADCRUMB CACHE **/
function nihod5_preprocess_breadcrumb(&$variables) {
  if(($node = \Drupal::routeMatch()->getParameter('node')) && $variables['breadcrumb']){
    $variables['breadcrumb'][] = array(
      'text' => $node->getTitle()
    );
  }
  $variables['#cache']['contexts'][] = 'url';
}